ALTER TABLE `foro_alura`.`topicos` 
CHANGE COLUMN `autor` `autor` INT NOT NULL ,
ADD INDEX `topicos a usuario_idx` (`autor` ASC) VISIBLE;
;
ALTER TABLE `foro_alura`.`topicos` 
ADD CONSTRAINT `topicos a usuario`
  FOREIGN KEY (`autor`)
  REFERENCES `foro_alura`.`usuarios` (`id`)
  ON DELETE NO ACTION
  ON UPDATE NO ACTION;